<% if session.include?(:user_id) %>
  <h1>Hi, <%= User.find(session[:user_id]).username %>!</h1>
<% else %>
  <h1>Hi, guest!</h1>
<% end %>

<h1>Problem Reports</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Supervisor</th>
    <th>Computer Number</th>
    <th>Details</th>
    <th>Status</th>
  </tr>

  <% @problem_reports.each do |p| %>
    <tr>
      <td><%= p.date.localtime %></td>
      <td><%= p.user_id %></td>
      <td><%= p.computer_number %></td>
      <td><%= p.details %></td>
      <td><%= p.status %></td>
      <td><%= link_to 'Show', p %></td>
      <td><%= link_to 'Edit', edit_problem_report_path(p) %></td>
      <td><%= link_to 'Delete', problem_report_path(id: p.id), method: :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'Submit new problem report', new_problem_report_path %></p>


<p><%= link_to 'Logout', logout_path, method: :delete %></p>